     "test:mocha": "node -e \"require('fs').mkdirSync('reports/logs', {recursive:true})\" && mocha --reporter mocha-junit-reporter --reporter-options mochaFile=reports/junit-report.xml test/mocha-wrapper.spec.js"
  },
  "dependencies": {
